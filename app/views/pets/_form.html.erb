<%= simple_form_for(@pet) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :breed %>
    <%= f.input :age %>
    <%= f.input :size, collection: ['very small', 'small', 'med'] %>
    <%= f.input :availability, placeholder: 'nice' %>
    <%= f.input :picture, as: :file %>
    
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
